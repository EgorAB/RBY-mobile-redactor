<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="horizontal"
                                             android:layout_width="match_parent"
                                             android:background="@color/white"
                                             android:layout_marginBottom="8dp"
                                             android:layout_height="72dp">

    <TextView android:textSize="22sp"
              android:textColor="@color/colorPrimaryDark"
              android:layout_gravity="center_vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:id="@+id/title"
              android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
              app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton android:background="@drawable/ic_create_black_24dp"
                 style="@style/ArticleButton" app:layout_constraintEnd_toEndOf="parent"
                 android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                 app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                 app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/edit"/>

    <ImageButton style="@style/ArticleButton" android:background="@drawable/ic_cloud_queue_black_24dp"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:id="@+id/cloud"
                 app:layout_constraintEnd_toStartOf="@+id/edit" android:layout_marginBottom="8dp"
                 android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                 android:layout_marginEnd="16dp"/>

</android.support.constraint.ConstraintLayout>