<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/backgroundColor">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@drawable/ic_r"
            android:id="@+id/imageView" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp" app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="@string/start_menu_decription"
            android:layout_width="306dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.494"/>
    <Button
            android:text="Начать"
            android:background="@drawable/button"
            android:layout_width="245dp"
            android:layout_height="69dp"
            android:id="@+id/start_button" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textSize="20sp"/>
</android.support.constraint.ConstraintLayout>