<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:openDrawer="start"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backgroundColor">
            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/headlineText"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:id="@+id/editText"
                    tools:layout_editor_absoluteX="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textStyle="bold"
                    android:backgroundTint="@color/textGray"
                    android:backgroundTintMode="src_in"
                    android:textColor="@color/textDarkGray"/>
            <EditText
                    android:layout_width="match_parent"
                    android:hint="@string/bodyText"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="0dp"
                    android:id="@+id/editText2"
                    android:backgroundTintMode="src_in"
                    android:backgroundTint="@color/textGray"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText"
                    android:textColor="@color/textGray"/>
        </android.support.design.widget.AppBarLayout>
        <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="end|bottom"
                    app:srcCompat="@drawable/ic_add_black_24dp" app:backgroundTint="#EFB815"/>
    </FrameLayout>

    <!--<ListView-->
              <!--android:id="@+id/left_drawer"-->
              <!--android:layout_width="280dp"-->
              <!--android:layout_height="match_parent"-->
              <!--android:layout_gravity="start"-->
              <!--android:choiceMode="singleChoice"-->
              <!--android:background="@color/backgroundColor"-->
              <!--android:divider="@android:color/black"-->
              <!--android:dividerHeight="1dp">-->
    <!--</ListView>-->
    <android.support.design.widget.NavigationView
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header_main"
            app:menu="@menu/activity_main_drawer"
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:layout_height="match_parent"
            android:id="@+id/navigationView"/>
</android.support.v4.widget.DrawerLayout>